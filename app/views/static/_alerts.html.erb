
<div class="mb-5">
<% if not @activeAlerts.nil?-%>




    <% @activeAlerts.each do |users| %>


        <div class="alert alert-danger alert-dismissible fade show" style="opacity:0.1;" role="alert">
            <strong><%= users.message %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
        </div>



        <% end %>




            <% end -%>

</div>